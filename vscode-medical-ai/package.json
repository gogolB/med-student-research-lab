{
  "name": "vscode-medical-research-ai",
  "displayName": "Medical Research AI Assistant",
  "description": "AI-powered assistant for medical research and data analysis",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:medicalResearchAI.startAgent",
    "onCommand:medicalResearchAI.askQuestion"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "medicalResearchAI.startAgent",
        "title": "Start Medical Research AI Assistant"
      },
      {
        "command": "medicalResearchAI.askQuestion",
        "title": "Ask Medical Research Question"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "medical-ai-sidebar",
          "title": "Medical AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "medical-ai-sidebar": [
        {
          "id": "medicalAIChat",
          "name": "AI Assistant"
        }
      ]
    },
    "configuration": {
      "title": "Medical Research AI",
      "properties": {
        "medicalResearchAI.backend": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "nim"],
          "description": "The AI backend to use (OpenAI or NVIDIA NIM)"
        },
        "medicalResearchAI.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "medicalResearchAI.nimApiKey": {
          "type": "string",
          "default": "",
          "description": "NVIDIA NIM API Key"
        },
        "medicalResearchAI.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "ts-loader": "^9.2.2"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}